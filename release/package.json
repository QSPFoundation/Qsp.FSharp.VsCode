{
	"name": "qsp",
	"version": "0.0.1",
	"publisher": "Fering",
	"contributors": [
		{
			"name": "Fering"
		}
	],
	"description": "QSP Language Support",
	"preview": false,
	"categories": [
		"Linters",
		"Programming Languages",
		"Snippets"
	],
    "license": "SEE LICENSE IN LICENSE.md",
    "icon": "icon.png",
	"bugs": {
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/gretmn102/QSP-VSCode"
	},
	"engines": {
		"vscode": "^0.10.0"
	},
	"main": "./fsharp",
	"contributes": {
		"languages": [
			{
				"id": "qsp",
				"aliases": [
					"QSP",
					"qsp"
				],
				"extensions": [
					".qsps"
				],
				"configuration": "./language-configuration.json"
			}
        ],
        "iconThemes": [
            {
                "id": "qsp",
                "label": "QSP Icon Theme",
                "path": "./fileicons/qsp-icon-theme.json"
            }
        ],
		"grammars": [
			{
				"language": "qsp",
				"scopeName": "source.qsp",
				"path": "./syntaxes/qsp.json"
			}
        ],
        "debuggers": [
            {
                "type": "qsp",
				"label": "Quest Soft Player",
				"languages": [
					"qsp"
                ],
                "configurationAttributes": {
                    "launch": {
						"required": [
							"program"
                        ],
                        "properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a .qsps file.",
								"default": "${file}"
							}
                        }
                    }
                }
            }
        ],
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "SpellCheck"
			},
			{
				"command": "extension.clearDecoration",
				"title": "Clear decoration"
			}
		],
		"semanticTokenScopes": [
			{
				"language": "qsp",
				"scopes": {
					"storage": ["storage.type.js"],
					"procedure": ["keyword.symbol.qsp"],
                    "keywordControl": ["keyword.control.qsp"],
                    "operatorArithmetic": ["keyword.operator.arithmetic.qsp"],
                    "operatorAssignment": ["keyword.operator.assignment.qsp"],
                    "operatorComparison": ["keyword.operator.comparison.qsp"],
                    "operatorRelational": ["keyword.operator.relational.qsp"],
                    "punctuationTerminatorStatement": ["punctuation.terminator.statement.qsp"],
                    "punctuationSeparatorColon": ["punctuation.separator.colon"],
                    "interpolationBegin": ["punctuation.definition.template-expression.begin.qsp"],
                    "interpolationEnd": ["punctuation.definition.template-expression.end.qsp"],
                    "constantNumericInteger": ["constant.numeric.integer.nativeint.qsp"]
				}
			}
		],
		"configuration": {
			"type": "object",
			"title": "QSP configuration",
			"properties": {
				"Qsp.FormatConfig.IsSplitStringPl": {
					"type": "boolean",
					"default": false,
					"description": "Разделяет одинокие строки. Например,\n```qsp\n'вот\nэто'\n```\nпреобразуется в:\n```qsp\n'вот'\n'это'\n```"
				},
				"Qsp.FormatConfig.TrimWhitespaceWhenSplit": {
					"type": "boolean",
					"default": false,
					"description": "Если `Format.IsSplitStringPl = true`, то удаляет с обеих сторон пробельные символы. Например,\n```qsp\n'вот\n\tэто\nи\n это'\n```\nпреобразуется в:\n```qsp\n'вот'\n'это'\n'и'\n'это'\n```"
				}
			}
		}
	},
	"activationEvents": [
		"onStartupFinished"
	]
}
